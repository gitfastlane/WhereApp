<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".SearchPassword">

    <TextView
        android:id="@+id/searchPWPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:text="비밀번호 찾기"
        android:textAlignment="center"
        android:textColor="#01010A"
        android:textSize="72sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="가입하신 정보확인 후"
            android:textAlignment="center"
            android:textColor="#01010A"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호를 변경하실 수 있습니다."
            android:textAlignment="center"
            android:textColor="#01010A"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/myName"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_pw_reset"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="아이디"
                android:textColor="#01010A"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editSearchPwId"
                android:layout_width="440dp"
                android:layout_height="60dp"
                android:ems="16"
                android:hint="찾아진 아이디 값 가져오기"
                android:textColor="#292929"
                android:textColorHint="#CCCCCC"
                android:textSize="24sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/under_line" />

        <LinearLayout
            android:id="@+id/phone"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_repw_reset"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="핸드폰 번호"
                android:textColor="#01010A"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editSearchPwPhone"
                android:layout_width="440dp"
                android:layout_height="60dp"
                android:ems="16"
                android:hint="'-'없이 연속으로 입력"
                android:textColor="#292929"
                android:textColorHint="#CCCCCC"
                android:textSize="24sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/under_line" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|top"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSearchPw"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:background="@drawable/green_button"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:text="확인"
            android:textColor="#01010A"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/go_login_searchForPW"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_button_big"
            android:onClick="LoginGo"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:text="취소"
            android:textColor="#01010A"
            android:textSize="34sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>