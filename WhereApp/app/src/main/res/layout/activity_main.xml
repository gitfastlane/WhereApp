<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0671ff"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:gravity="bottom|center"
        android:text="START"
        android:textAlignment="center"
        android:textColor="#01010A"
        android:textSize="72sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="웨얼 시작하기"
        android:textAlignment="center"
        android:textColor="#01010A"
        android:textSize="34sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="사용자를 선택하세요."
        android:textAlignment="center"
        android:textColor="#01010A"
        android:textSize="34sp" />

    <RadioGroup
        android:id="@+id/ma_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:visibility="visible">

        <RadioButton
            android:id="@+id/ma_parent"
            style="@style/Widget.AppCompat.Button.Borderless"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_button_selector_left"
            android:button="@null"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:text="보호자"
            android:textColor="#01010A"
            android:textSize="34sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/ma_child"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_button_selector_right"
            android:button="@null"
            android:text="우리아이"
            android:textColor="#01010A"
            android:textSize="34sp"
            android:textStyle="bold" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ma_registerBtn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:background="@drawable/green_button"
            android:onClick="btnInputBoxGo"
            android:text="회원가입"
            android:textColor="#01010A"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ma_loginBtn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/green_button"
            android:onClick="btnLoginBoxGo"
            android:text="로그인"
            android:textColor="#01010A"
            android:textSize="34sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>