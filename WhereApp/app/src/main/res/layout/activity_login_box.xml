<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".LoginBox">

    <TextView
        android:id="@+id/searchPWPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom"
        android:text="로그인"
        android:textAlignment="center"
        android:textColor="#01010A"
        android:textSize="72sp" />

    <LinearLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/id"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="아이디"
                android:textColor="#01010A"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/lb_input_id"
                android:layout_width="440dp"
                android:layout_height="60dp"
                android:ems="10"
                android:hint="아이디 입력"
                android:inputType="textPersonName"
                android:textColor="#292929"
                android:textColorHint="#CCCCCCCc"
                android:textSize="24sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/under_line" />

        <LinearLayout
            android:id="@+id/pw"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="비밀번호"
                android:textColor="#01010A"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/lb_input_pw"
                android:layout_width="440dp"
                android:layout_height="60dp"
                android:ems="16"
                android:hint="비밀번호 입력"
                android:textColor="#292929"
                android:textColorHint="#CCCCCC"
                android:textSize="24sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/under_line" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/lb_loginBtn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:background="@drawable/green_button"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:text="로그인"
            android:textColor="#01010A"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/lb_cancelBtn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_button_big"
            android:onClick="MainGo"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:text="취소"
            android:textColor="#01010A"
            android:textSize="34sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/lb_registerBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="inputBoxGo"
            android:text="회원가입"
            android:textColor="#01010A"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/lb_searchIDBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="searchIdBoxGo"
            android:text="아이디 찾기"
            android:textColor="#01010A"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/lb_searchPWBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="saarchPwBoxGo"
            android:text="비밀번호 찾기"
            android:textColor="#01010A"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>